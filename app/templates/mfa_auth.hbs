<section id="main" class="container">
  <div id="forgot-password">
    <div class="row">
      <div id="content" class="span26">
        <div class="row">
          <div class="offset9 span8">
            <a href="https://www.balancedpayments.com"><img class="logo" src="images/balanced-logo.png" alt="Balanced" /></a>

            <div class="auth">Enter the authentication code below.</div>

            <form id="forgot-form" {{ bindAttr class="hasError:error" }}>
              {{view Ember.TextField name="otp_secret" valueBinding="otp_secret" placeholder="Authentication Code"}}
              <button {{action "submit"}} type="button">Continue To Dashboard</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
