<div class="modal wide-modal hide" id="add-card">
    <form class="form-horizontal split-labels" {{action "save" on="submit" target="view"}}>
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">Ã—</button>
        <h2>Add a credit card</h2>
    </div>
    <div class="modal-body modal-with-headers">
        {{partial "modals/modalErrors"}}

        <div class="modal-content">
            <div {{bindAttr class=":control-group view.model.validationErrors.name:error"}}>
                <label class="control-label">Card holder's name</label>
                <div class="controls">
                  {{view Ember.TextField valueBinding="view.model.name" name="name" class="full"}}
                  <div class="alert alert-error row-full label4b">{{formatError view.model.validationErrors.name}}</div>
                </div>
            </div>

            <div {{bindAttr class=":control-group view.model.validationErrors.number:error"}}>
                <label class="control-label">Card Number</label>
                <div class="controls">
                  {{view Ember.TextField valueBinding="view.model.number" name="number" class="full"}}
                  <div class="alert alert-error row-full label4b">{{formatError view.model.validationErrors.number}}</div>
                </div>
            </div>

            <div {{bindAttr class=":control-group view.model.validationErrors.security_code:error"}}>
                <label class="control-label">Security Code</label>
                <div class="controls">
                  {{view Ember.TextField valueBinding="view.model.security_code" name="security_code" class="full"}}
                  <div class="alert alert-error row-full label4b">{{formatError view.model.validationErrors.security_code}}</div>
                </div>
            </div>

            <div {{bindAttr class=":control-group view.expiration_error:error"}}>
                <label class="control-label">Expiration Date</label>
                <div class="controls inline-control">
                  {{view Ember.Select
                      contentBinding="view.validMonths"
                      valueBinding="view.model.expiration_month"
                      prompt="Month"
                      name="expiration_month"
                  }}
                  {{view Ember.Select
                      contentBinding="view.validYears"
                      valueBinding="view.model.expiration_year"
                      prompt="Year"
                      name="expiration_year"
                  }}
                  <div class="alert alert-error row-full label4b">{{formatError view.model.validationErrors.expiration_month}}</div>
                </div>
            </div>

            <div {{bindAttr class=":control-group view.model.validationErrors.postal_code:error"}}>
                <label class="control-label">Billing Zip Code</label>
                <div class="controls">
                  <span>Required for American Express cards</span>
                  {{view Ember.TextField valueBinding="view.model.postal_code" name="postal_code" class="full"}}
                </div>
            </div>
        </div>
    </div>
    <div class="modal-informational">
        <img src="images/credit-card-instructions.png" alt="Credit Card Instructions" class="modal-informational-content"/>
    </div>
    <div class="modal-footer">
        {{view Balanced.ModalActionButtonsView submitTitle="Add"}}
    </div>
    </form>
</div>
<a href="#" class="add" {{action open}}>Add a card</a>
